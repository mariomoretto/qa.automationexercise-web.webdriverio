{
  "name": "wdio-project",
  "version": "1.0.0",
  "scripts": {
    "test": "wdio run wdio.conf.js", 
    "test:ci": "wdio run wdio.conf.js",
    "report": "allure generate allure-results --clean && allure open",
    "test:headless": "wdio run wdio.conf.js",               
    "test:headed": "cross-env HEADLESS=false wdio run wdio.conf.js",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report"
  },
  "devDependencies": {
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/cli": "^8.33.0",
    "@wdio/local-runner": "^8.33.0",
    "@wdio/mocha-framework": "^8.33.0",
    "@wdio/spec-reporter": "^8.33.0",
    "allure-commandline": "^2.34.1",
    "cross-env": "^10.1.0"
  }
}
